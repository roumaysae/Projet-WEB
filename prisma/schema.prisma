// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  name     String?
  role     Role
  Article  Article[] //l'user peut ecrir un ou plusieurs article
}

enum Role {
  ADMIN
  AUTHOR
}

model Article {
  id          Int           @id @default(autoincrement())
  titre       String
  contenue    String? //facultatif
  image       String?
  createdAt   DateTime      @default(now()) //pour la creer definitvement le moment de creation ca va pas changer  
  updatedAt   DateTime      @updatedAt
  published   Boolean       @default(false)
  userId      Int //la cle etrangerre de l'user qui a cree le post
  user        User          @relation(fields: [userId], references: [id]) //un article est associe à un et un seul utilisateur
  Categorie   Categorie[] //0 ou plusieur categorie   avoir un article
  Commentaire Commentaire[] // 0 ou plusieurs commentaire dans un article
}

model Categorie {
  id       Int       @id @default(autoincrement())
  nom      String
  articles Article[] //0 ou plusieurs article dans une categorie
}

model Commentaire {
  id        Int     @id @default(autoincrement())
  email     String
  contenu   String
  articleId Int //commentaire associer exactement à un article
  article   Article @relation(fields: [articleId], references: [id])
}

